    <script>
        // Sunburst Data (kept for the Stakeholder Map)
        const sunburstData = {
            ids: [
                "Ecosystem", 
                "Assurance", "Assurance-G", "Assurance-R", 
                "Assurance-S&P", "Assurance-CDP", "Assurance-GRI", 
                "Assurance-Peterson", "Assurance-SVI", "Assurance-B Lab", 
                "Financing", "Financing-G", "Financing-R", 
                "Financing-GIIN", "Financing-Rockefeller", "Financing-WB", "Financing-GIZ", 
                "Financing-IDB", "Financing-AVPN", "Financing-Sovereign", 
                "Policy", "Policy-G", "Policy-R", 
                "Policy-UNGC", "Policy-OECD", "Policy-G20", 
                "Policy-ILO", "Policy-UNDP", "Policy-WHO", "Policy-ASEAN" 
            ],
            labels: [
                "Social Value<br>Ecosystem", 
                "Assurance", "Global", "Regional/Country", 
                "S&P Global", "CDP", "GRI", 
                "Peterson Solutions", "Social Value Intl (SVI)", "B Lab (B Corps)", 
                "Financing", "Global", "Regional/Country", 
                "GIIN", "Rockefeller Fdn", "World Bank", "GIZ", 
                "IDB", "AVPN", "Sovereign Fund", 
                "Policy", "Global", "Regional/Country", 
                "UN Global Compact", "OECD", "G20", 
                "ILO", "UNDP", "WHO", "ASEAN" 
            ],
            parents: [
                "", 
                "Ecosystem", "Assurance", "Assurance", 
                "Assurance-G", "Assurance-G", "Assurance-G", 
                "Assurance-R", "Assurance-R", "Assurance-R", 
                "Ecosystem", "Financing", "Financing", 
                "Financing-G", "Financing-G", "Financing-G", "Financing-G", 
                "Financing-R", "Financing-R", "Financing-R", 
                "Ecosystem", "Policy", "Policy", 
                "Policy-G", "Policy-G", "Policy-G", 
                "Policy-R", "Policy-R", "Policy-R", "Policy-R" 
            ],
            marker: {
                colors: [
                    '#1f2937', 
                    '#4f46e5', '#6366f1', '#a5b4fc', 
                    '#c7d2fe', '#e0e7ff', '#f1f5fd', 
                    '#818cf8', '#b5c5f8', '#d9e0fc', 
                    '#10b981', '#34d399', '#6ee7b7', 
                    '#a7f3d0', '#d1fae5', '#f0fdf4', '#e0f8f8', 
                    '#4ed1d1', '#74e09f', '#a9f7c7', 
                    '#f59e0b', '#fbbf24', '#fcd34d', 
                    '#fde68a', '#fef3c7', '#fffbeb', 
                    '#faac47', '#fcd57e', '#fde6a7', '#fff7e0' 
                ]
            }
        };

        function renderSunburst() {
            const data = [{
                type: "sunburst",
                ids: sunburstData.ids,
                labels: sunburstData.labels,
                parents: sunburstData.parents,
                textfont: { color: 'black' },
                outsidetextfont: {size: 14, color: "#374151"}, 
                leaf: {opacity: 0.8},
                marker: sunburstData.marker,
                branchvalues: 'total', 
                root: {
                    textfont: {
                        color: 'white',
                        size: 18,
                        weight: 'bold' 
                    }
                },
                textinfo: "label" 
            }];

            const layout = {
                margin: {l: 0, r: 0, b: 0, t: 0},
                sunburstcolorway: ["#4f46e5", "#10b981", "#f59e0b"],
                responsive: true,
                paper_bgcolor: '#ffffff'
            };

            Plotly.newPlot('sunburstChart', data, layout, {
                displayModeBar: false, 
                staticPlot: false, 
                responsive: true
            });
        }
        
        // --- Interactive Network Logic ---

        let currentActivePillar = null;
        const allPillars = ['assurance', 'financing', 'policy'];
        const scaleFactor = 1.5; // Scale factor for the clicked pillar

        // Center coordinates of the original pillars (SVG coordinates 0-100)
        const pillarCenter = {
            'assurance': { x: 20, y: 30 },
            'financing': { x: 80, y: 30 },
            'policy': { x: 50, y: 85 }
        };
        const svgCenter = { x: 50, y: 50 };

        function handlePillarClick(clickedPillarId) {
            const isAlreadyActive = clickedPillarId === currentActivePillar;
            
            // 1. Reset everything first
            resetNetworkView();

            if (isAlreadyActive) {
                currentActivePillar = null;
                return; // Clicked the active pillar, just reset and exit
            }

            currentActivePillar = clickedPillarId;

            // 2. Hide connections (all lines/paths)
            document.getElementById('connections').style.display = 'none';

            const clickedCenter = pillarCenter[clickedPillarId];
            const translateX = svgCenter.x - clickedCenter.x;
            const translateY = svgCenter.y - clickedCenter.y;

            allPillars.forEach(pillarId => {
                const group = document.getElementById(`group-${pillarId}`);
                const topics = document.getElementById(`${pillarId}-topics`);
                
                if (pillarId === clickedPillarId) {
                    // 3. Enlarge and position the clicked pillar to the center
                    group.setAttribute('transform', `translate(${translateX}, ${translateY}) scale(${scaleFactor})`);
                    
                    // 4. Show the topics (word cloud) for the active pillar
                    if (topics) {
                        topics.classList.remove('sub-topic-hidden');
                    }

                } else {
                    // 5. Hide other pillars
                    group.style.display = 'none';
                    if (topics) {
                        topics.classList.add('sub-topic-hidden');
                    }
                }
            });
            
            // Dim the central node and deliverables tooltip when a pillar is focused
            document.getElementById('center-node-group').style.opacity = 0.1;
            document.querySelector('.node-label').style.opacity = 0.1;
        }

        function resetNetworkView() {
            // Show connections
            document.getElementById('connections').style.display = '';

            // Reset center node/deliverables opacity
            document.getElementById('center-node-group').style.opacity = 1;
            document.querySelector('.node-label').style.opacity = 1;

            // Reset all pillars
            allPillars.forEach(pillarId => {
                const group = document.getElementById(`group-${pillarId}`);
                const topics = document.getElementById(`${pillarId}-topics`);
                
                group.style.display = '';
                group.setAttribute('transform', ''); // Remove scale and translation
                
                // Hide all topics
                if (topics) {
                    topics.classList.add('sub-topic-hidden');
                }
            });
        }
        
        function toggleSidebar() {
            const sidebar = document.getElementById('consultation-sidebar');
            sidebar.classList.toggle('open');
            // Toggle body overflow to prevent background scrolling when sidebar is open
            document.body.style.overflow = sidebar.classList.contains('open') ? 'hidden' : 'auto';
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Render the organizational map (Sunburst)
            renderSunburst();
        });
    </script>

</body>
</html>
